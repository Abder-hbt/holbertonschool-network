#!/bin/bash

# Check if run as root
if [ "$EUID" -ne 0 ]; then
  echo "Please run as root"
  exit 1
fi

# Backup original hosts file
cp /etc/hosts /etc/hosts.bak

# Create a temporary file without previous entries
grep -v 'localhost' /etc/hosts | grep -v 'facebook.com' > /tmp/hosts.new

# Add custom entries
echo "127.0.0.2 localhost" >> /tmp/hosts.new
echo "8.8.8.8 facebook.com" >> /tmp/hosts.new

# Replace original hosts file
cat /tmp/hosts.new > /etc/hosts

# Clean up
rm /tmp/hosts.new
